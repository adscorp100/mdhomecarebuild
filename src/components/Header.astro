---
import { Icon } from 'astro-icon/components';
---

<header class="fixed top-4 left-0 right-0 z-50 px-4 md:px-8">
  <div class="navbar max-w-6xl mx-auto rounded-full bg-secondary/80 backdrop-blur-xl border border-white/10 shadow-2xl text-secondary-content pl-4 pr-4 h-16 sm:h-20 transition-all duration-300">
    
    <!-- Navbar Start: Logo -->
    <div class="navbar-start">
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity pl-2">
        <img src="/assets/logo.svg" alt="MD Homecare Logo" class="h-8 w-auto sm:h-9" />
        <span class="text-base sm:text-lg font-bold text-white tracking-tight hidden sm:inline-block">MD Homecare</span>
      </a>
    </div>

    <!-- Navbar Center: Desktop Menu -->
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1 gap-1 text-sm font-medium items-center">
        <li><a href="/" class="rounded-full hover:bg-white/10 hover:text-white transition-colors py-3">Home</a></li>
        
        <li><a href="/services" class="rounded-full hover:bg-white/10 hover:text-white transition-colors py-3">Services</a></li>

        <li><a href="/blog" class="rounded-full hover:bg-white/10 hover:text-white transition-colors py-3">Blog</a></li>
        <li><a href="/jobs" class="rounded-full hover:bg-white/10 hover:text-white transition-colors py-3">Jobs</a></li>
        <li><a href="/contact" class="rounded-full hover:bg-white/10 hover:text-white transition-colors py-3">Contact</a></li>
      </ul>
    </div>

    <!-- Navbar End: Call Button + Mobile Menu -->
    <div class="navbar-end gap-2">
      <!-- Call Button - Always Visible -->
      <a href="tel:+61863869999" class="inline-flex btn btn-primary btn-sm sm:btn-md rounded-full px-5 text-white font-bold shadow-lg shadow-primary/20 hover:shadow-primary/40 border-none">
        <Icon name="hugeicons:call-02" class="h-4 w-4" />
        <span class="hidden sm:inline">08 6386 9999</span>
        <span class="sm:hidden">Call</span>
      </a>

      <!-- Mobile Menu Button -->
      <label for="mobile-drawer" class="btn btn-ghost btn-circle btn-md lg:hidden hover:bg-white/10 text-white">
         <Icon name="hugeicons:menu-02" class="h-6 w-6" />
      </label>
    </div>
  </div>
</header>

