<script is:inline>
(function() {
  // December 2025 Carer Payment Rates
  const RATES = {
    carerPayment: {
      single: 1149.00,
      partnered: 866.80
    },
    carerAllowance: 156.90,
    incomeTest: {
      freeAreaSingle: 212,
      freeAreaCouple: 372,
      taperRate: 0.50
    },
    assetLimits: {
      single: {
        homeowner: 314000,
        nonHomeowner: 566000
      },
      partnered: {
        homeowner: 470000,
        nonHomeowner: 722000
      }
    }
  };

  // DOM Elements
  const calculator = document.getElementById('carer-calculator');
  const steps = calculator.querySelectorAll('.calc-step');
  const progress = document.getElementById('calc-progress');
  const stepIndicator = calculator.querySelector('.step-indicator');
  const nextBtns = calculator.querySelectorAll('.next-step');
  const prevBtns = calculator.querySelectorAll('.prev-step');
  const resetBtn = document.getElementById('reset-calc');
  const partnerIncomeField = document.getElementById('partner-income-field');

  let currentStep = 1;

  // Step Navigation
  function showStep(step) {
    steps.forEach((s, i) => {
      s.classList.toggle('hidden', i + 1 !== step);
    });
    progress.value = (step / 3) * 100;
    stepIndicator.textContent = `Step ${step} of 3`;
    currentStep = step;

    if (step === 3) {
      calculateResults();
    }
  }

  // Toggle partner income field based on relationship
  function updatePartnerField() {
    const relationship = document.querySelector('input[name="relationship"]:checked').value;
    partnerIncomeField.classList.toggle('hidden', relationship === 'single');
  }

  // Calculate Results
  function calculateResults() {
    const relationship = document.querySelector('input[name="relationship"]:checked').value;
    const homeowner = document.querySelector('input[name="homeowner"]:checked').value;
    const careHours = document.querySelector('input[name="care-hours"]:checked').value;
    const income = parseFloat(document.getElementById('income').value) || 0;
    const partnerIncome = parseFloat(document.getElementById('partner-income').value) || 0;
    const assets = parseFloat(document.getElementById('assets').value) || 0;

    const isPartnered = relationship === 'partnered';
    const isHomeowner = homeowner === 'yes';
    const providesConstantCare = careHours === 'constant';

    // Calculate Carer Payment
    let carerPayment = 0;
    let cpEligible = false;
    let cpBreakdown = '';

    // Asset test
    const assetLimit = isPartnered
      ? (isHomeowner ? RATES.assetLimits.partnered.homeowner : RATES.assetLimits.partnered.nonHomeowner)
      : (isHomeowner ? RATES.assetLimits.single.homeowner : RATES.assetLimits.single.nonHomeowner);

    const passesAssetTest = assets <= assetLimit;

    // Income test
    const totalIncome = isPartnered ? income + partnerIncome : income;
    const freeArea = isPartnered ? RATES.incomeTest.freeAreaCouple : RATES.incomeTest.freeAreaSingle;
    const maxPayment = isPartnered ? RATES.carerPayment.partnered : RATES.carerPayment.single;

    if (providesConstantCare && passesAssetTest) {
      if (totalIncome <= freeArea) {
        carerPayment = maxPayment;
        cpEligible = true;
        cpBreakdown = `Full rate - income under free area ($${freeArea}/fn)`;
      } else {
        const excess = totalIncome - freeArea;
        const reduction = excess * RATES.incomeTest.taperRate;
        carerPayment = Math.max(0, maxPayment - reduction);
        cpEligible = carerPayment > 0;
        cpBreakdown = cpEligible
          ? `Reduced by $${reduction.toFixed(2)}/fn due to income over $${freeArea}`
          : `Income too high - exceeds cut-off threshold`;
      }
    } else if (!providesConstantCare) {
      cpBreakdown = 'Requires constant care (equivalent to a full-time job) to qualify for Carer Payment';
    } else if (!passesAssetTest) {
      cpBreakdown = `Assets exceed limit of $${assetLimit.toLocaleString()}`;
    }

    // Calculate Carer Allowance (no means test)
    const carerAllowance = RATES.carerAllowance;
    const caEligible = true; // Always eligible if caring 14+ hours
    const caBreakdown = 'No income or assets test applies to Carer Allowance';

    // Update UI
    document.getElementById('cp-amount').textContent = `$${carerPayment.toFixed(2)}`;
    document.getElementById('cp-eligibility').textContent = cpEligible ? 'Eligible' : 'Not Eligible';
    document.getElementById('cp-eligibility').className = `badge ${cpEligible ? 'badge-success' : 'badge-error'}`;
    document.getElementById('cp-breakdown').textContent = cpBreakdown;

    document.getElementById('ca-amount').textContent = `$${carerAllowance.toFixed(2)}`;
    document.getElementById('ca-eligibility').textContent = caEligible ? 'Eligible' : 'Check Required';
    document.getElementById('ca-eligibility').className = `badge ${caEligible ? 'badge-success' : 'badge-warning'}`;
    document.getElementById('ca-breakdown').textContent = caBreakdown;

    const totalFortnight = carerPayment + carerAllowance;
    const totalYear = totalFortnight * 26;

    document.getElementById('total-fortnight').textContent = `$${totalFortnight.toFixed(2)}`;
    document.getElementById('total-year').textContent = `$${totalYear.toLocaleString('en-AU', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
  }

  // Event Listeners
  nextBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const nextStep = parseInt(btn.dataset.next);
      showStep(nextStep);
    });
  });

  prevBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const prevStep = parseInt(btn.dataset.prev);
      showStep(prevStep);
    });
  });

  resetBtn.addEventListener('click', () => {
    document.getElementById('income').value = '';
    document.getElementById('partner-income').value = '';
    document.getElementById('assets').value = '';
    document.querySelector('input[name="relationship"][value="single"]').checked = true;
    document.querySelector('input[name="homeowner"][value="yes"]').checked = true;
    document.querySelector('input[name="care-hours"][value="constant"]').checked = true;
    updatePartnerField();
    showStep(1);
  });

  // Update partner field visibility when relationship changes
  document.querySelectorAll('input[name="relationship"]').forEach(radio => {
    radio.addEventListener('change', updatePartnerField);
  });

  // Initialize
  updatePartnerField();
})();
</script>
