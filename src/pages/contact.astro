---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

const metaDescription = "Contact MD Home Care for professional in-home care services. Our dedicated care team is available to discuss your home care needs. Call MD Homecare today or send us a message for personalized support.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact MD Home Care",
  "description": metaDescription,
  "url": "https://mdhomecare.com.au/contact",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+61405429512",
    "contactType": "customer service",
    "availableLanguage": "English",
    "areaServed": "AU"
  },
  "provider": {
    "@type": "HomeHealthcareService",
    "name": "MD Home Care",
    "description": "Professional in-home care services provider"
  }
};
---

<BaseLayout
  title="Contact MD Home Care | In-Home Care Services Support"
  description={metaDescription}
  canonical="https://mdhomecare.com.au/contact"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Hero Section -->
  <section
    class="hero min-h-[90vh] bg-cover bg-center bg-fixed relative"
    style="background-image: url('/assets/ndis-services-intellectual-disability-2-woman-smiling-hugging.webp');"
  >
    <div class="hero-overlay bg-gradient-to-r from-white/50 to-white/20"></div>
    <div class="hero-content text-center">
      <div class="max-w-3xl bg-white/80 backdrop-blur-xl rounded-3xl p-8 lg:p-12 shadow-2xl border border-white/90">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-primary leading-tight mb-6">
          Get in Touch with MD Home Care
        </h1>
        <p class="text-lg text-base-content/80 max-w-2xl mx-auto mb-8 leading-relaxed">
          Need In-Home Care or Disability Support? Please get in touch with MD Home Care and find out how we can help you or your loved ones live more independently at home.
        </p>
        <div class="flex flex-wrap gap-4 justify-center mb-6">
          <a href="tel:+61863869999" class="btn btn-primary btn-lg gap-2 shadow-lg">
            <Icon name="hugeicons:call-02" class="h-5 w-5" />
            Call 08 6386 9999
          </a>
          <a href="#contact-form" class="btn btn-outline btn-lg gap-2">
            <Icon name="hugeicons:message-01" class="h-5 w-5" />
            Send a Message
          </a>
        </div>

        <!-- Online Status -->
        <div id="online-status" class="flex items-center justify-center gap-2 text-success">
          <span class="w-2 h-2 bg-success rounded-full animate-pulse"></span>
          <span class="text-sm font-medium">Available now</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Grid -->
  <div class="max-w-6xl mx-auto px-4 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
      <!-- Contact Info Card -->
      <div class="lg:col-span-2">
        <div class="card bg-base-100 shadow-xl border border-base-200 sticky top-24">
          <div class="card-body text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="hugeicons:call-02" class="h-8 w-8 text-primary-content" />
            </div>
            <h2 class="card-title justify-center text-2xl mb-2">Call MD Home Care</h2>
            <p class="text-base-content/70 mb-6">Our professional in-home care team is available to assist you</p>
            <a href="tel:+61863869999" class="text-3xl font-bold text-primary hover:text-primary-focus transition-colors mb-4">
              08 6386 9999
            </a>
            <div class="divider"></div>
            <p class="text-sm text-base-content/60">Available for all your in-home care needs</p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3" id="contact-form">
        <div class="card bg-base-100 shadow-xl border border-base-200">
          <div class="card-body">
            <h2 class="card-title text-2xl mb-2">How Can We Help You?</h2>
            <p class="text-base-content/70 mb-6">Complete the form below to discuss your specific care needs with MD Home Care. We're here to help you find the right support services.</p>

            <form class="space-y-5">
              <!-- Name Field -->
              <div class="form-control">
                <label class="floating-label">
                  <span>Full Name <span class="text-error">*</span></span>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Full Name"
                    class="input input-bordered w-full"
                    required
                  />
                </label>
              </div>

              <!-- Email Field -->
              <div class="form-control">
                <label class="floating-label">
                  <span>Email Address <span class="text-error">*</span></span>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Email Address"
                    class="input input-bordered w-full"
                    required
                  />
                </label>
              </div>

              <!-- Phone Field -->
              <div class="form-control">
                <label class="floating-label">
                  <span>Phone Number</span>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="Phone Number"
                    class="input input-bordered w-full"
                  />
                </label>
              </div>

              <!-- Service Type Select -->
              <div class="form-control">
                <label class="floating-label">
                  <span>Service Type</span>
                  <select id="service" name="service" class="select select-bordered w-full">
                    <option value="" disabled selected>Select a service</option>
                    <option value="ndis">NDIS Support Services</option>
                    <option value="aged-care">Aged Care Services</option>
                    <option value="disability">Disability Support</option>
                    <option value="personal-care">Personal Care</option>
                    <option value="domestic">Domestic Assistance</option>
                    <option value="respite">Respite Care</option>
                    <option value="other">Other / General Enquiry</option>
                  </select>
                </label>
              </div>

              <!-- Message Field -->
              <div class="form-control">
                <label class="floating-label">
                  <span>Your Message <span class="text-error">*</span></span>
                  <textarea
                    id="message"
                    name="message"
                    placeholder="Your Message"
                    class="textarea textarea-bordered w-full h-32 resize-none"
                    required
                  ></textarea>
                </label>
              </div>

              <!-- Privacy Notice -->
              <p class="text-xs text-base-content/60 text-center">
                By submitting this form, you agree to our <a href="/privacy" class="link link-primary">Privacy Policy</a>.
              </p>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary btn-block gap-2">
                <Icon name="hugeicons:sent" class="h-5 w-5" />
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SEO Content Section -->
  <section class="bg-base-200 py-16">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-base-content mb-6">Professional In-Home Care Services by MD Home Care</h2>
      <p class="text-base-content/70 leading-relaxed mb-6">
        MD Home Care is your trusted provider of professional in-home care services. Whether you need personal care, disability support, or specialized home care assistance, our dedicated team is here to help. We understand that choosing the right in-home care service is important, which is why our care team is available to discuss your specific needs.
      </p>

      <h3 class="text-xl font-semibold text-base-content mb-4">Why Choose MD Home Care?</h3>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <Icon name="hugeicons:tick-01" class="h-6 w-6 text-primary shrink-0 mt-0.5" />
          <span class="text-base-content/70">Professional and experienced care team</span>
        </li>
        <li class="flex items-start gap-3">
          <Icon name="hugeicons:tick-01" class="h-6 w-6 text-primary shrink-0 mt-0.5" />
          <span class="text-base-content/70">Personalized in-home care services</span>
        </li>
        <li class="flex items-start gap-3">
          <Icon name="hugeicons:tick-01" class="h-6 w-6 text-primary shrink-0 mt-0.5" />
          <span class="text-base-content/70">Comprehensive support for you and your family</span>
        </li>
        <li class="flex items-start gap-3">
          <Icon name="hugeicons:tick-01" class="h-6 w-6 text-primary shrink-0 mt-0.5" />
          <span class="text-base-content/70">Easy contact options - call or message anytime</span>
        </li>
      </ul>
    </div>
  </section>
</BaseLayout>

<script>
  // Add PostHog type declaration
  declare global {
    interface Window {
      posthog?: {
        identify: (id: string, properties?: Record<string, any>) => void;
        capture: (event: string, properties?: Record<string, any>) => void;
      }
    }
  }

  // Check if current time is within business hours in Sydney
  function isBusinessHours() {
    const sydneyTime = new Date().toLocaleString('en-US', { timeZone: 'Australia/Sydney' });
    const hour = new Date(sydneyTime).getHours();
    return hour >= 9 && hour < 19;
  }

  // Update online status visibility
  function updateOnlineStatus() {
    const onlineStatus = document.getElementById('online-status');
    if (onlineStatus) {
      onlineStatus.style.display = isBusinessHours() ? 'flex' : 'none';
    }
  }

  updateOnlineStatus();
  setInterval(updateOnlineStatus, 60000);

  // Form submission handler
  document.querySelector('form')?.addEventListener('submit', (e) => {
    e.preventDefault();

    const form = e.target as HTMLFormElement;
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalHTML = submitButton.innerHTML;
    const name = (form.querySelector('#name') as HTMLInputElement).value;
    const email = (form.querySelector('#email') as HTMLInputElement).value;
    const phone = (form.querySelector('#phone') as HTMLInputElement).value;
    const service = (form.querySelector('#service') as HTMLSelectElement).value;
    const message = (form.querySelector('#message') as HTMLTextAreaElement).value;

    // Track form submission in PostHog
    if (window.posthog) {
      window.posthog.identify(email, {
        name: name,
        email: email,
        phone: phone || undefined,
        last_seen: new Date().toISOString()
      });

      window.posthog.capture('contact_form_submitted', {
        name: name,
        email: email,
        phone: phone || undefined,
        service_type: service || undefined,
        message: message,
        message_length: message.length
      });
    }

    // Disable form and show sending status
    submitButton.disabled = true;
    submitButton.innerHTML = '<span class="loading loading-spinner loading-sm"></span> Sending...';
    Array.from(form.elements).forEach(element => {
      if (element instanceof HTMLInputElement || element instanceof HTMLTextAreaElement) {
        element.disabled = true;
      }
    });

    // Simulate sending
    setTimeout(() => {
      submitButton.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg> Message Sent!';
      submitButton.classList.remove('btn-primary');
      submitButton.classList.add('btn-success');

      setTimeout(() => {
        form.reset();
        submitButton.innerHTML = originalHTML;
        submitButton.disabled = false;
        submitButton.classList.remove('btn-success');
        submitButton.classList.add('btn-primary');

        Array.from(form.elements).forEach(element => {
          if (element instanceof HTMLInputElement || element instanceof HTMLTextAreaElement) {
            element.disabled = false;
          }
        });
      }, 2000);
    }, 1500);
  });

  // Track email identification
  document.querySelector('#email')?.addEventListener('blur', (e) => {
    const email = (e.target as HTMLInputElement).value;
    const name = (document.querySelector('#name') as HTMLInputElement)?.value;
    if (email && window.posthog) {
      window.posthog.identify(email, {
        name: name || undefined,
        email: email,
        last_seen: new Date().toISOString()
      });
    }
  });
</script>
