---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogPage from './_BlogPage.astro';

// Get all blog posts
const allPosts = await getCollection('blog');

// Sort posts by last update date (fallback to pubDate)
const sortedPosts = allPosts.sort(
  (a, b) => {
    const aDate = (a.data.updateDate || a.data.pubDate).valueOf();
    const bDate = (b.data.updateDate || b.data.pubDate).valueOf();
    return bDate - aDate;
  }
);

// Create pagination data for the first page manually
const pageSize = 20;
const currentPage = 1;
const totalPosts = sortedPosts.length;
const lastPage = Math.ceil(totalPosts / pageSize);
const posts = sortedPosts.slice(0, pageSize);

// Create a page object similar to what paginate() would provide
const page = {
  data: posts,
  start: 0,
  end: Math.min(pageSize - 1, totalPosts - 1),
  size: pageSize,
  total: totalPosts,
  currentPage: currentPage,
  lastPage: lastPage,
  url: {
    current: '/blog',
    prev: undefined,
    next: lastPage > 1 ? '/blog/2' : undefined
  }
};
---

<BlogPage page={page} /> 