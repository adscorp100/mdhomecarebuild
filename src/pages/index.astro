---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';

// Fetch recent blog posts for the resources section
const allBlogPosts = await getCollection('blog');
const recentBlogPosts = allBlogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

// SEO Metadata
const title = "NDIS Provider Sydney & Melbourne | MD Home Care";
const description = "Trusted NDIS provider in Sydney & Melbourne offering 24/7 home care, SIL accommodation, and support coordination. Empowering independence with compassionate care.";

// Data for sections
const features = [
  {
    icon: "hugeicons:shield-01",
    badge: "Our People",
    title: "Vetted Professionals You Can Trust",
    desc: "Finding the right support worker can feel overwhelming. That's why we take the guesswork out of it. Every carer on our team is fully background-checked, qualified, and employed directly by us—not through agencies or subcontractors.",
    desc2: "We invest in our people because we know that consistency matters. When you work with MD Homecare, you'll see familiar faces who understand your needs and preferences.",
    img: "/assets/nurse.webp"
  },
  {
    icon: "hugeicons:clock-01",
    badge: "Always Available",
    title: "24/7 Dedicated Support",
    desc: "Life doesn't follow a 9-to-5 schedule, and neither do we. Whether it's an early morning routine, overnight care, or support during weekends and holidays, our team is here when you need us.",
    desc2: "For participants with complex needs, round-the-clock support isn't a luxury—it's essential. We provide seamless care coordination so you always have someone in your corner.",
    img: "/assets/grandma.webp"
  },
  {
    icon: "hugeicons:favourite",
    badge: "Clinical Excellence",
    title: "Nurse-Led Care Teams",
    desc: "Complex care requires expert oversight. Our services are led by experienced Registered Nurses who develop comprehensive care plans, provide clinical governance, and ensure best-practice standards are met every single day.",
