<script is:inline>
(function() {
  // NDIS Price Limits 2025-26 (Independent)
  const NDIS_RATES = {
    standard: { weekday: 70.88, saturday: 99.24, sunday: 127.59, holiday: 155.95 },
    level2: { weekday: 78.07, saturday: 109.30, sunday: 140.53, holiday: 171.75 },
    high: { weekday: 85.72, saturday: 120.01, sunday: 154.30, holiday: 188.58 }
  };

  // SCHADS Award approximation (employed) - Level 2.1 casual loaded
  const SCHADS_RATES = {
    weekday: 36.77,
    saturday: 51.48,
    sunday: 66.19,
    holiday: 80.90
  };

  const SLEEPOVER_RATE = 261.55;

  function calculate() {
    const employment = document.querySelector('input[name="employment"]:checked')?.value || 'employed';
    const totalHours = parseFloat(document.getElementById('total-hours').value) || 30;
    const weekdayPct = parseFloat(document.getElementById('weekday-pct').value) || 0;
    const saturdayPct = parseFloat(document.getElementById('saturday-pct').value) || 0;
    const sundayPct = parseFloat(document.getElementById('sunday-pct').value) || 0;
    const holidayPct = parseFloat(document.getElementById('holiday-pct').value) || 0;
    const supportLevel = document.getElementById('support-level').value || 'standard';
    const sleepovers = parseFloat(document.getElementById('sleepovers').value) || 0;

    // Show/hide support level for independent
    document.getElementById('support-level-section').style.display = employment === 'independent' ? 'block' : 'none';
    document.getElementById('tax-note').style.display = employment === 'independent' ? 'block' : 'none';

    // Update total percentage
    const totalPct = weekdayPct + saturdayPct + sundayPct + holidayPct;
    const pctDisplay = document.getElementById('total-pct');
    pctDisplay.textContent = totalPct + '%';
    pctDisplay.className = totalPct === 100 ? 'font-bold text-success' : 'font-bold text-error';

    // Get rates based on employment type
    const rates = employment === 'independent' ? NDIS_RATES[supportLevel] : SCHADS_RATES;

    // Calculate hours per shift type
    const weekdayHrs = totalHours * (weekdayPct / 100);
    const saturdayHrs = totalHours * (saturdayPct / 100);
    const sundayHrs = totalHours * (sundayPct / 100);
    const holidayHrs = totalHours * (holidayPct / 100);

    // Calculate pay per shift type
    const weekdayPay = weekdayHrs * rates.weekday;
    const saturdayPay = saturdayHrs * rates.saturday;
    const sundayPay = sundayHrs * rates.sunday;
    const holidayPay = holidayHrs * rates.holiday;
    const sleepoversay = sleepovers * SLEEPOVER_RATE;

    const totalWeekly = weekdayPay + saturdayPay + sundayPay + holidayPay + sleepoversay;
    const totalMonthly = totalWeekly * 52 / 12;
    const totalAnnual = totalWeekly * 52;

    // Update display
    document.getElementById('weekday-hrs').textContent = weekdayHrs.toFixed(1);
    document.getElementById('saturday-hrs').textContent = saturdayHrs.toFixed(1);
    document.getElementById('sunday-hrs').textContent = sundayHrs.toFixed(1);
    document.getElementById('holiday-hrs').textContent = holidayHrs.toFixed(1);

    document.getElementById('weekday-pay').textContent = '$' + weekdayPay.toFixed(2);
    document.getElementById('saturday-pay').textContent = '$' + saturdayPay.toFixed(2);
    document.getElementById('sunday-pay').textContent = '$' + sundayPay.toFixed(2);
    document.getElementById('holiday-pay').textContent = '$' + holidayPay.toFixed(2);
    document.getElementById('sleepover-count').textContent = sleepovers;
    document.getElementById('sleepover-pay').textContent = '$' + sleepoversay.toFixed(2);

    document.getElementById('total-weekly').textContent = '$' + totalWeekly.toFixed(2);
    document.getElementById('weekly-income').textContent = '$' + Math.round(totalWeekly).toLocaleString();
    document.getElementById('monthly-income').textContent = '$' + Math.round(totalMonthly).toLocaleString();
    document.getElementById('annual-income').textContent = '$' + Math.round(totalAnnual).toLocaleString();
  }

  function showComparison() {
    const totalHours = parseFloat(document.getElementById('total-hours').value) || 30;
    const weekdayPct = parseFloat(document.getElementById('weekday-pct').value) || 60;
    const saturdayPct = parseFloat(document.getElementById('saturday-pct').value) || 20;
    const sundayPct = parseFloat(document.getElementById('sunday-pct').value) || 15;
    const holidayPct = parseFloat(document.getElementById('holiday-pct').value) || 5;
    const sleepovers = parseFloat(document.getElementById('sleepovers').value) || 0;

    const weekdayHrs = totalHours * (weekdayPct / 100);
    const saturdayHrs = totalHours * (saturdayPct / 100);
    const sundayHrs = totalHours * (sundayPct / 100);
    const holidayHrs = totalHours * (holidayPct / 100);

    // Employed
    const empWeekly = weekdayHrs * SCHADS_RATES.weekday + saturdayHrs * SCHADS_RATES.saturday +
                      sundayHrs * SCHADS_RATES.sunday + holidayHrs * SCHADS_RATES.holiday +
                      sleepovers * SLEEPOVER_RATE;
    const empAnnual = empWeekly * 52;

    // Independent
    const indWeekly = weekdayHrs * NDIS_RATES.standard.weekday + saturdayHrs * NDIS_RATES.standard.saturday +
                      sundayHrs * NDIS_RATES.standard.sunday + holidayHrs * NDIS_RATES.standard.holiday +
                      sleepovers * SLEEPOVER_RATE;
    const indAnnual = indWeekly * 52;
    const indAfterTaxSuper = indAnnual * 0.585; // Roughly after 30% tax + 11.5% super

    const tbody = document.getElementById('comparison-body');
    tbody.innerHTML = `
      <tr><td>Gross Weekly</td><td class="text-right">$${Math.round(empWeekly)}</td><td class="text-right font-bold">$${Math.round(indWeekly)}</td></tr>
      <tr><td>Gross Annual</td><td class="text-right">$${Math.round(empAnnual).toLocaleString()}</td><td class="text-right font-bold">$${Math.round(indAnnual).toLocaleString()}</td></tr>
      <tr><td>Super paid by</td><td class="text-right text-success">Employer</td><td class="text-right text-warning">You</td></tr>
      <tr><td>Tax deducted by</td><td class="text-right text-success">Employer</td><td class="text-right text-warning">You (quarterly)</td></tr>
      <tr><td>Leave entitlements</td><td class="text-right text-success">Yes</td><td class="text-right text-error">No</td></tr>
      <tr><td>Est. take-home*</td><td class="text-right">~$${Math.round(empAnnual * 0.78).toLocaleString()}</td><td class="text-right">~$${Math.round(indAfterTaxSuper).toLocaleString()}</td></tr>
    `;

    document.getElementById('comparison-section').classList.remove('hidden');
  }

  // Event listeners
  document.querySelectorAll('input[name="employment"]').forEach(el => el.addEventListener('change', calculate));
  document.getElementById('total-hours').addEventListener('input', calculate);
  document.getElementById('weekday-pct').addEventListener('input', calculate);
  document.getElementById('saturday-pct').addEventListener('input', calculate);
  document.getElementById('sunday-pct').addEventListener('input', calculate);
  document.getElementById('holiday-pct').addEventListener('input', calculate);
  document.getElementById('support-level').addEventListener('change', calculate);
  document.getElementById('sleepovers').addEventListener('input', calculate);
  document.getElementById('compare-btn').addEventListener('click', showComparison);

  // Initial calculation
  calculate();
})();
</script>
