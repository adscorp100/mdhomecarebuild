---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

// Get all providers
const allProviders = await getCollection('providers');

// Filter out home-caring if it somehow still exists in the collection
const filteredProviders = allProviders.filter(provider => provider.slug !== 'home-caring');

// Sort providers alphabetically by name
const sortedProviders = filteredProviders.sort(
  (a, b) => a.data.name.localeCompare(b.data.name)
);

// Define type for providersByCategory to fix TypeScript errors
interface ProvidersByCategory {
  [key: string]: CollectionEntry<'providers'>[];
}

// Group providers by category
const providersByCategory: ProvidersByCategory = sortedProviders.reduce((acc, provider) => {
  const category = provider.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(provider);
  return acc;
}, {} as ProvidersByCategory);

// Sort categories alphabetically
const sortedCategories = Object.keys(providersByCategory).sort();
---

<BaseLayout title="Provider Directory | MD Home Care">
  <div class="container">
    <section class="directory-section">
      <div class="directory-header">
        <h1>Care Provider Directory</h1>
        <p>Browse our comprehensive directory of Aged Care and NDIS providers across Australia. This listing helps you find and connect with quality care providers to meet your individual needs.</p>
        
        <!-- Integrated CTAs -->
        <div class="cta-container">
          <div class="provider-cta">
            <p>Need Help Finding a Provider? <a href="/contact" class="cta-button">Talk to Our Team</a></p>
          </div>
          
          <div class="provider-cta provider-listing-cta">
            <p>Want to get listed? <a href="/contact" class="cta-button secondary">Contact Our Team</a></p>
          </div>
        </div>
      </div>
      
      <div class="directory-layout">
        <!-- Category Navigation -->
        <div class="category-nav">
          <h2>Categories</h2>
          <ul class="category-links">
            {sortedCategories.map((category) => (
              <li>
                <a href={"#category-" + category.toLowerCase().replace(/\s+/g, '-')} class="category-link">
                  {category}
                  <span class="category-count">{providersByCategory[category].length}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Provider Categories Content -->
        <div class="directory-content">
          {sortedCategories.map((category) => (
            <div id={"category-" + category.toLowerCase().replace(/\s+/g, '-')} class="category-section">
              <h2>{category}</h2>
              <div class="providers-grid">
                {providersByCategory[category].map((provider) => (
                  <article class="provider-card">
                    <a href={"/directory/" + provider.slug} class="card-link">
                      <div class="card-content">
                        <div class="card-header">
                          <h3>{provider.data.name}</h3>
                          {provider.data.claimed ? (
                            <span class="claim-status claimed">Verified</span>
                          ) : (
                            <span class="claim-status unclaimed">Unverified</span>
                          )}
                        </div>
                        <p class="provider-contact">
                          {provider.data.phone && (
                            <span class="phone">{provider.data.phone}</span>
                          )}
                          {provider.data.email && (
                            <span class="email">{provider.data.email}</span>
                          )}
                        </p>
                        <p class="provider-description">{provider.data.description}</p>
                        <div class="provider-services">
                          {provider.data.services && provider.data.services.map((service: string) => (
                            <span class="service-tag">{service}</span>
                          ))}
                        </div>
                        <span class="read-more">View details</span>
                      </div>
                    </a>
                  </article>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
