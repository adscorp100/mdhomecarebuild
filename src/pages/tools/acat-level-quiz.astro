<script is:inline>
(function() {
  const questions = ['q1', 'q2', 'q3', 'q4', 'q5', 'q6', 'q7', 'q8', 'results'];
  let currentQuestion = 0;

  const progressBar = document.getElementById('quiz-progress');
  const indicator = document.getElementById('question-indicator');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const restartBtn = document.getElementById('restart-btn');

  function showQuestion(index) {
    questions.forEach((q, i) => {
      document.getElementById(q).classList.toggle('hidden', i !== index);
    });

    currentQuestion = index;

    if (index < 8) {
      progressBar.value = ((index + 1) / 8) * 100;
      indicator.textContent = `Question ${index + 1} of 8`;
      prevBtn.classList.toggle('hidden', index === 0);
      nextBtn.classList.remove('hidden');
      restartBtn.classList.add('hidden');
    } else {
      progressBar.value = 100;
      indicator.textContent = 'Results';
      prevBtn.classList.add('hidden');
      nextBtn.classList.add('hidden');
      restartBtn.classList.remove('hidden');
      showResults();
    }
  }

  function showResults() {
    const age = document.querySelector('input[name="age"]:checked')?.value;

    if (age === 'no') {
      document.getElementById('result-icon').innerHTML = '<div class="w-20 h-20 rounded-full bg-warning/20 flex items-center justify-center mx-auto"><svg class="w-10 h-10 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg></div>';
      document.getElementById('result-level').innerHTML = '<p class="text-warning font-bold text-lg">Age Requirement Not Met</p>';
      document.getElementById('result-message').innerHTML = '<p class="text-center text-secondary/70">Home Care Packages are for people aged 65+ (or 50+ for Aboriginal/Torres Strait Islander Australians). You may be eligible for the <a href="/tools/ndis-eligibility-quiz" class="text-primary hover:underline">NDIS</a> if you have a disability.</p>';
      document.getElementById('next-steps').innerHTML = `
        <div class="bg-info/5 border border-info/20 rounded-2xl p-5">
          <h4 class="font-bold text-secondary mb-3">Alternative Options</h4>
          <ul class="list-disc pl-5 space-y-2 text-sm text-secondary/70">
            <li>If you have a disability, check <a href="/tools/ndis-eligibility-quiz" class="text-primary hover:underline">NDIS eligibility</a></li>
            <li>Some younger people with disability may access aged care - speak to your GP</li>
            <li>Contact My Aged Care on 1800 200 422 to discuss your situation</li>
          </ul>
        </div>`;
      return;
    }

    // Calculate score
    const scores = {
      personal_care: parseInt(document.querySelector('input[name="personal_care"]:checked')?.value || '0'),
      mobility: parseInt(document.querySelector('input[name="mobility"]:checked')?.value || '0'),
      household: parseInt(document.querySelector('input[name="household"]:checked')?.value || '0'),
      meals: parseInt(document.querySelector('input[name="meals"]:checked')?.value || '0'),
      health: parseInt(document.querySelector('input[name="health"]:checked')?.value || '0'),
      cognitive: parseInt(document.querySelector('input[name="cognitive"]:checked')?.value || '0'),
      safety: parseInt(document.querySelector('input[name="safety"]:checked')?.value || '0')
    };

    const totalScore = Object.values(scores).reduce((a, b) => a + b, 0);
    const maxScore = 21;

    let level, levelClass, funding, hours;

    if (totalScore <= 4) {
      level = 1;
      levelClass = 'text-info';
      funding = '$10,588';
      hours = '2-3';
    } else if (totalScore <= 8) {
      level = 2;
      levelClass = 'text-success';
      funding = '$18,622';
      hours = '4-5';
    } else if (totalScore <= 14) {
      level = 3;
      levelClass = 'text-warning';
      funding = '$40,675';
      hours = '10-12';
    } else {
      level = 4;
      levelClass = 'text-error';
      funding = '$61,826';
      hours = '15-20';
    }

    // Highlight the matching level row
    ['level1-row', 'level2-row', 'level3-row', 'level4-row'].forEach((id, i) => {
      const row = document.getElementById(id);
      if (i + 1 === level) {
        row.classList.add('bg-primary/10', 'rounded-lg', 'px-3', '-mx-3');
      }
    });

    document.getElementById('result-icon').innerHTML = `<div class="w-24 h-24 rounded-full bg-primary/10 flex items-center justify-center mx-auto"><span class="text-4xl font-bold ${levelClass}">L${level}</span></div>`;
    document.getElementById('result-level').innerHTML = `<p class="${levelClass} font-bold text-xl">Level ${level} - ${funding}/year</p><p class="text-secondary/60 text-sm mt-1">Approximately ${hours} hours of care per week</p>`;

    document.getElementById('result-message').innerHTML = `
      <p class="text-center text-secondary/70 mb-4">Based on your answers, you may qualify for a <strong>Level ${level} Home Care Package</strong>. This is an estimate only - your actual level is determined by an ACAT assessment.</p>
      <div class="bg-base-200/50 rounded-xl p-4 text-sm">
        <p class="font-medium text-secondary mb-2">Your needs breakdown:</p>
        <div class="grid grid-cols-2 gap-2 text-secondary/70">
          <div>Personal care: ${['None', 'Low', 'Medium', 'High'][scores.personal_care]}</div>
          <div>Mobility: ${['Independent', 'Uses aids', 'Needs help', 'High support'][scores.mobility]}</div>
          <div>Household: ${['Independent', 'Some help', 'Regular help', 'Full help'][scores.household]}</div>
          <div>Meals: ${['Independent', 'Some help', 'Regular help', 'Full help'][scores.meals]}</div>
          <div>Health needs: ${['Low', 'Moderate', 'Regular', 'Complex'][scores.health]}</div>
          <div>Cognitive: ${['Good', 'Minor issues', 'Needs support', 'Significant'][scores.cognitive]}</div>
        </div>
      </div>`;

    document.getElementById('next-steps').innerHTML = `
      <div class="bg-primary/5 border border-primary/20 rounded-2xl p-5">
        <h4 class="font-bold text-secondary mb-3">Next Steps</h4>
        <ol class="list-decimal pl-5 space-y-2 text-sm text-secondary/70">
          <li>Call <strong>My Aged Care on 1800 200 422</strong> to register and request an ACAT assessment</li>
          <li>Prepare for your assessment - have documents ready and a family member present</li>
          <li>After assessment, you'll be placed in the queue for your approved package level</li>
          <li>While waiting, you may be eligible for interim CHSP services</li>
        </ol>
        <div class="mt-4">
          <a href="/tools/home-care-package-calculator" class="text-primary hover:underline font-medium">Calculate how many hours you'll get with Level ${level} â†’</a>
        </div>
      </div>`;
  }

  // Event listeners
  nextBtn.addEventListener('click', () => {
    const questionNames = ['age', 'personal_care', 'mobility', 'household', 'meals', 'health', 'cognitive', 'safety'];
    const currentName = questionNames[currentQuestion];

    if (currentQuestion < 8) {
      const selected = document.querySelector(`input[name="${currentName}"]:checked`);
      if (!selected) {
        alert('Please select an option to continue.');
        return;
      }
    }

    if (currentQuestion < 8) {
      showQuestion(currentQuestion + 1);
    }
  });

  prevBtn.addEventListener('click', () => {
    if (currentQuestion > 0) {
      showQuestion(currentQuestion - 1);
    }
  });

  restartBtn.addEventListener('click', () => {
    document.querySelectorAll('input[type="radio"]').forEach(r => r.checked = false);
    ['level1-row', 'level2-row', 'level3-row', 'level4-row'].forEach(id => {
      document.getElementById(id).classList.remove('bg-primary/10', 'rounded-lg', 'px-3', '-mx-3');
    });
    showQuestion(0);
  });

  // Initialize
  showQuestion(0);
})();
</script>
