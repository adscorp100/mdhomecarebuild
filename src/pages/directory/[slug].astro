---
// Redirect from /directory/[slug] to home page
const redirectUrl = '/';

// Define getStaticPaths to handle all directory pages
export function getStaticPaths() {
  // List of common provider slugs
  const providerSlugs = [
    'mycarespace',
    'help-at-home',
    'better-caring',
    'hireup',
    'mable',
    'care-for-family',
    'able-therapy',
    'auscare-in-home-care',
    'careseekers',
    'default',
    // Add a catch-all slug for any other variants
    'catch-all'
  ];
  
  // Create a route for each slug
  return providerSlugs.map(slug => {
    return {
      params: { slug }
    };
  });
}

// The rest of the component will always redirect
---

<meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
<script>
  window.location.href = '/'
</script>

<body>
  <h1>Redirecting...</h1>
  <p>If you are not redirected automatically, <a href="/">click here</a>.</p>
</body> 