<script is:inline>
(function() {
  // 2025 Home Care Package Funding Amounts
  const PACKAGES = {
    1: { funding: 10588, name: 'Level 1 (Basic)', bestFor: 'Basic care needs' },
    2: { funding: 18622, name: 'Level 2 (Low)', bestFor: 'Low-level care' },
    3: { funding: 40675, name: 'Level 3 (Intermediate)', bestFor: 'Intermediate care' },
    4: { funding: 61826, name: 'Level 4 (High)', bestFor: 'High-level care' }
  };

  const BASIC_DAILY_FEE = 12.75;
  const MAX_INCOME_TESTED_FEE = 34.62;

  function calculate() {
    const level = document.querySelector('input[name="package-level"]:checked')?.value || '2';
    const hourlyRate = parseFloat(document.getElementById('hourly-rate').value) || 55;
    const adminFee = parseFloat(document.getElementById('admin-fee').value) || 20;
    const hasIncomeFee = document.querySelector('input[name="income-tested"]:checked')?.value === 'yes';

    const pkg = PACKAGES[level];
    const weeklyFunding = pkg.funding / 52;
    const weeklyBasicFee = BASIC_DAILY_FEE * 7;
    const weeklyIncomeFee = hasIncomeFee ? MAX_INCOME_TESTED_FEE * 7 : 0;
    const afterFees = weeklyFunding - weeklyBasicFee - weeklyIncomeFee;
    const adminAmount = afterFees * (adminFee / 100);
    const availableForCare = afterFees - adminAmount;
    const weeklyHours = availableForCare / hourlyRate;
    const annualHours = weeklyHours * 52;

    // Update display
    document.getElementById('weekly-hours').textContent = weeklyHours.toFixed(1);
    document.getElementById('annual-hours').textContent = Math.round(annualHours);
    document.getElementById('weekly-funding').textContent = '$' + weeklyFunding.toFixed(2);
    document.getElementById('weekly-basic-fee').textContent = '-$' + weeklyBasicFee.toFixed(2);
    document.getElementById('weekly-income-fee').textContent = hasIncomeFee ? '-$' + weeklyIncomeFee.toFixed(2) : '$0.00';
    document.getElementById('admin-pct').textContent = adminFee;
    document.getElementById('weekly-admin').textContent = '-$' + adminAmount.toFixed(2);
    document.getElementById('weekly-available').textContent = '$' + availableForCare.toFixed(2);

    // Update service examples
    const serviceExamples = document.getElementById('service-examples');
    const hours = weeklyHours;
    let examples = '';

    if (hours >= 1) {
      examples += `<p class="flex items-center gap-2"><span class="w-2 h-2 bg-primary rounded-full"></span>${Math.floor(hours)} hour${hours >= 2 ? 's' : ''} of personal care (showering, dressing)</p>`;
    }
    if (hours >= 2) {
      examples += `<p class="flex items-center gap-2"><span class="w-2 h-2 bg-accent rounded-full"></span>OR ${Math.floor(hours * 1.1)} hours domestic assistance (cleaning, laundry)</p>`;
    }
    if (hours >= 3) {
      examples += `<p class="flex items-center gap-2"><span class="w-2 h-2 bg-success rounded-full"></span>OR Mix: ${Math.floor(hours/2)} hrs personal care + ${Math.floor(hours/2)} hrs domestic</p>`;
    }
    if (hours >= 5) {
      examples += `<p class="flex items-center gap-2"><span class="w-2 h-2 bg-info rounded-full"></span>Plus occasional nursing or allied health visits</p>`;
    }

    if (!examples) {
      examples = '<p>Limited hours available - consider a higher package level</p>';
    }

    serviceExamples.innerHTML = examples;
  }

  function showComparison() {
    const hourlyRate = parseFloat(document.getElementById('hourly-rate').value) || 55;
    const adminFee = parseFloat(document.getElementById('admin-fee').value) || 20;
    const hasIncomeFee = document.querySelector('input[name="income-tested"]:checked')?.value === 'yes';

    const tbody = document.getElementById('comparison-body');
    tbody.innerHTML = '';

    for (let level = 1; level <= 4; level++) {
      const pkg = PACKAGES[level];
      const weeklyFunding = pkg.funding / 52;
      const weeklyBasicFee = BASIC_DAILY_FEE * 7;
      const weeklyIncomeFee = hasIncomeFee ? MAX_INCOME_TESTED_FEE * 7 : 0;
      const afterFees = weeklyFunding - weeklyBasicFee - weeklyIncomeFee;
      const adminAmount = afterFees * (adminFee / 100);
      const availableForCare = afterFees - adminAmount;
      const weeklyHours = availableForCare / hourlyRate;

      const row = document.createElement('tr');
      row.innerHTML = `
        <td class="font-medium">Level ${level}</td>
        <td class="text-right">$${pkg.funding.toLocaleString()}</td>
        <td class="text-right font-bold text-primary">${weeklyHours.toFixed(1)} hrs</td>
        <td class="text-right text-sm">${pkg.bestFor}</td>
      `;
      tbody.appendChild(row);
    }

    document.getElementById('comparison-table').classList.remove('hidden');
  }

  // Event listeners
  document.querySelectorAll('input[name="package-level"]').forEach(el => {
    el.addEventListener('change', calculate);
  });
  document.getElementById('hourly-rate').addEventListener('input', calculate);
  document.getElementById('admin-fee').addEventListener('input', calculate);
  document.querySelectorAll('input[name="income-tested"]').forEach(el => {
    el.addEventListener('change', calculate);
  });
  document.getElementById('compare-btn').addEventListener('click', showComparison);

  // Initial calculation
  calculate();
})();
</script>
