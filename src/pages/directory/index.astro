    }
  }
  
  @media (min-width: 1200px) {
    .providers-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (min-width: 1400px) {
    .directory-layout {
      grid-template-columns: 250px 1fr;
    }
  }
