              <div class="flex justify-between py-2 border-b border-base-200">
                <span class="text-secondary/70">Standard Weekday</span>
                <span class="font-bold text-secondary">$346.51/day</span>
              </div>
              <div class="flex justify-between py-2 border-b border-base-200">
                <span class="text-secondary/70">Saturday</span>
                <span class="font-bold text-secondary">$384.92/day</span>
              </div>
              <div class="flex justify-between py-2 border-b border-base-200">
                <span class="text-secondary/70">Sunday</span>
                <span class="font-bold text-secondary">$423.32/day</span>
              </div>
              <div class="flex justify-between py-2">
                <span class="text-secondary/70">Public Holiday</span>
                <span class="font-bold text-secondary">$461.72/day</span>
              </div>
            </div>
          </div>

          <!-- High Support Rates -->
          <div class="bg-accent/5 border border-accent/20 rounded-[2rem] p-6 mb-6">
            <h3 class="font-bold text-secondary mb-4 flex items-center gap-2">
              <Icon name="hugeicons:shield-user" class="w-5 h-5 text-accent" />
