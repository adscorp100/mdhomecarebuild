<script is:inline>
(function() {
  const STORAGE_KEY = 'fca-checklist-progress';

  // Load saved progress
  function loadProgress() {
    try {
      const saved = localStorage.getItem(STORAGE_KEY);
      return saved ? JSON.parse(saved) : {};
    } catch {
      return {};
    }
  }

  // Save progress
  function saveProgress(progress) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(progress));
    } catch {
      // localStorage not available
    }
  }

  // Update UI
  function updateUI() {
    const progress = loadProgress();
    const checkboxes = document.querySelectorAll('input[data-item]');
    let completed = 0;
    const total = checkboxes.length;

    checkboxes.forEach(checkbox => {
      const itemId = checkbox.dataset.item;
      checkbox.checked = progress[itemId] || false;
      if (checkbox.checked) {
        completed++;
        checkbox.closest('.checklist-item').classList.add('bg-primary/5', 'border-primary/30');
      } else {
        checkbox.closest('.checklist-item').classList.remove('bg-primary/5', 'border-primary/30');
      }
    });

    // Update overall progress
    document.getElementById('completed-count').textContent = completed;
    document.getElementById('total-count').textContent = total;
    const percentage = Math.round((completed / total) * 100);
    document.getElementById('overall-progress').value = percentage;
    document.getElementById('progress-text').textContent = `${percentage}% complete`;

    // Update category progress
    document.querySelectorAll('[data-category]').forEach(category => {
      const categoryId = category.dataset.category;
      const categoryCheckboxes = category.querySelectorAll('input[data-item]');
      const categoryCompleted = Array.from(categoryCheckboxes).filter(cb => cb.checked).length;
      const categoryTotal = categoryCheckboxes.length;
      const progressSpan = document.querySelector(`.category-progress[data-category-id="${categoryId}"]`);
      if (progressSpan) {
        progressSpan.textContent = `${categoryCompleted}/${categoryTotal}`;
      }
    });
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    updateUI();

    // Listen for checkbox changes
    document.querySelectorAll('input[data-item]').forEach(checkbox => {
      checkbox.addEventListener('change', () => {
        const progress = loadProgress();
        progress[checkbox.dataset.item] = checkbox.checked;
        saveProgress(progress);
        updateUI();
      });
    });

    // Reset all button
    document.getElementById('reset-all').addEventListener('click', () => {
      if (confirm('Are you sure you want to reset all checklist items?')) {
        saveProgress({});
        updateUI();
      }
    });
  });
})();
</script>
