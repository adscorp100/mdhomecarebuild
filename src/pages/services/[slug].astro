        if (searchTerm === '' || suburbName.includes(searchTerm) || regionName.includes(searchTerm)) {
          item.style.display = 'list-item';
        } else {
          item.style.display = 'none';
        }
      });
      
      // Show/hide state sections based on whether they have visible suburbs
