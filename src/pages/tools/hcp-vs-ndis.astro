<script is:inline>
(function() {
  let currentStep = 1;
  const totalSteps = 4;

  function showStep(step) {
    document.querySelectorAll('.quiz-step').forEach(el => el.classList.add('hidden'));
    if (step <= totalSteps) {
      document.getElementById('q' + step).classList.remove('hidden');
      document.getElementById('quiz-progress').value = (step / totalSteps) * 100;
      document.getElementById('step-indicator').textContent = `Question ${step} of ${totalSteps}`;
    } else {
      document.getElementById('result').classList.remove('hidden');
      document.getElementById('quiz-progress').value = 100;
      document.getElementById('step-indicator').textContent = 'Result';
      calculateResult();
    }
    currentStep = step;
  }

  function calculateResult() {
    const age = document.querySelector('input[name="age"]:checked')?.value;
    const disability = document.querySelector('input[name="disability"]:checked')?.value;
    const supportLevel = document.querySelector('input[name="support-level"]:checked')?.value;
    const currentSupport = document.querySelector('input[name="current-support"]:checked')?.value;

    let recommendation = 'ndis';
    let title = 'NDIS (National Disability Insurance Scheme)';
    let description = '';
    let steps = [];

    // Logic
    if (age === '65plus' && disability !== 'yes-permanent') {
      recommendation = 'hcp';
      title = 'Home Care Package';
      description = 'Based on your age and needs, a Home Care Package is likely your best option. HCP provides government-funded support to help you stay living at home.';
      steps = [
        'Call My Aged Care on 1800 200 422',
        'Complete a phone assessment',
        'Have an ACAT assessment arranged',
        'Get approved for a package level',
        'Choose a provider and start services'
      ];
    } else if (age === '65plus' && disability === 'yes-permanent') {
      recommendation = 'maybe-ndis';
      title = 'Explore Both Options';
      description = 'You have a permanent disability but are over 65. If you acquired your disability before 65, you may still be eligible for NDIS. Otherwise, Home Care Package would be your option.';
      steps = [
        'Contact NDIS to check if you can still apply (1800 800 110)',
        'If not eligible for NDIS, contact My Aged Care (1800 200 422)',
        'Gather medical evidence of your disability',
        'Consider speaking with a support coordinator for guidance'
      ];
    } else if (currentSupport === 'ndis') {
      recommendation = 'stay-ndis';
      title = 'Stay on NDIS';
      description = 'You\'re already on NDIS. Even if you turn 65, you can choose to remain on NDIS. This is usually the better option as NDIS provides more funding and flexibility.';
      steps = [
        'Continue with your current NDIS plan',
        'At your next plan review, discuss any changing needs',
        'If you turn 65, you\'ll be asked if you want to stay on NDIS or move to aged care',
        'Most people choose to stay on NDIS'
      ];
    } else if (disability === 'yes-permanent' && age !== '65plus') {
      recommendation = 'ndis';
      title = 'NDIS (National Disability Insurance Scheme)';
      description = 'You appear to meet the key NDIS criteria: under 65 with a permanent disability. NDIS typically provides more funding and flexibility than Home Care Packages.';
      steps = [
        'Gather evidence of your disability (medical reports, assessments)',
        'Apply for NDIS access online or call 1800 800 110',
        'Complete an access request form',
        'Attend your planning meeting',
        'Receive your NDIS plan and start using supports'
      ];
    } else {
      recommendation = 'hcp';
      title = 'Home Care Package';
      description = 'Based on your answers, a Home Care Package may be more suitable. HCP provides government-funded support for older Australians to stay at home.';
      steps = [
        'Call My Aged Care on 1800 200 422',
        'Complete a phone assessment',
        'Have an ACAT assessment arranged',
        'Get approved for a package level (1-4)',
        'Choose a provider and start services'
      ];
    }

    // Update UI
    document.getElementById('result-title').textContent = 'Recommended: ' + title;
    document.getElementById('program-name').textContent = title;
    document.getElementById('program-description').textContent = description;

    const statsHtml = recommendation.includes('ndis') ? `
      <div class="bg-white rounded-lg p-3 text-center">
        <p class="text-sm text-secondary/60">Avg Funding</p>
        <p class="text-xl font-bold text-primary">$50,000+/yr</p>
      </div>
      <div class="bg-white rounded-lg p-3 text-center">
        <p class="text-sm text-secondary/60">Daily Fee</p>
        <p class="text-xl font-bold text-success">$0</p>
      </div>
    ` : `
      <div class="bg-white rounded-lg p-3 text-center">
        <p class="text-sm text-secondary/60">Funding Range</p>
        <p class="text-xl font-bold text-primary">$10K-$62K/yr</p>
      </div>
      <div class="bg-white rounded-lg p-3 text-center">
        <p class="text-sm text-secondary/60">Daily Fee</p>
        <p class="text-xl font-bold text-warning">$12.75</p>
      </div>
    `;
    document.getElementById('program-stats').innerHTML = statsHtml;

    const stepsHtml = steps.map((step, i) => `
      <p class="flex items-start gap-2">
        <span class="bg-primary text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center flex-shrink-0 mt-0.5">${i + 1}</span>
        <span>${step}</span>
      </p>
    `).join('');
    document.getElementById('steps-content').innerHTML = stepsHtml;
  }

  // Event listeners
  document.getElementById('next-q1').addEventListener('click', () => showStep(2));
  document.getElementById('back-q2').addEventListener('click', () => showStep(1));
  document.getElementById('next-q2').addEventListener('click', () => showStep(3));
  document.getElementById('back-q3').addEventListener('click', () => showStep(2));
  document.getElementById('next-q3').addEventListener('click', () => showStep(4));
  document.getElementById('back-q4').addEventListener('click', () => showStep(3));
  document.getElementById('show-result').addEventListener('click', () => showStep(5));
  document.getElementById('restart-quiz').addEventListener('click', () => {
    document.querySelectorAll('input[type="radio"]').forEach(el => el.checked = false);
    showStep(1);
  });

  // Initialize
  showStep(1);
})();
</script>
