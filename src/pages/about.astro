---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "About | MD Homecare";
const description = "Learn about MD Homecare, our mission, values, and dedicated team of professionals providing exceptional home care services across Melbourne and Sydney.";
const image = "/assets/team.webp";
---

<BaseLayout
  title={title}
  description={description}
  image={image}
>
  <!-- Hero Section -->
  <section class="hero min-h-[50vh] bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-extrabold text-base-content mb-6">About Us</h1>
        <p class="text-lg text-base-content/70 leading-relaxed">
          Welcome to MD Homecare. We are passionate about providing compassionate, high-quality home care services that help individuals and families live more independently.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="card bg-base-100 shadow-xl border border-base-200">
        <div class="card-body">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center">
              <Icon name="hugeicons:target-01" class="h-6 w-6 text-primary-content" />
            </div>
            <h2 class="card-title text-2xl">Our Mission</h2>
          </div>
          <p class="text-base-content/70 leading-relaxed">
            Our mission is to provide exceptional, personalized home care services that empower individuals to maintain their independence, dignity, and quality of life. We are committed to delivering compassionate support that makes a real difference in the lives of our clients and their families.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 px-4 bg-base-200">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center text-base-content mb-12">Our Values</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card bg-base-100 shadow-md">
          <div class="card-body text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="hugeicons:favourite" class="h-8 w-8 text-primary" />
            </div>
            <h3 class="card-title justify-center text-xl mb-2">Compassion</h3>
            <p class="text-base-content/70">We treat every client with kindness, empathy, and respect, understanding that each person's journey is unique.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md">
          <div class="card-body text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="hugeicons:award-01" class="h-8 w-8 text-primary" />
            </div>
            <h3 class="card-title justify-center text-xl mb-2">Excellence</h3>
            <p class="text-base-content/70">We strive for the highest standards in everything we do, continuously improving our services and skills.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md">
          <div class="card-body text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="hugeicons:user-group" class="h-8 w-8 text-primary" />
            </div>
            <h3 class="card-title justify-center text-xl mb-2">Community</h3>
            <p class="text-base-content/70">We believe in building strong connections and supporting the communities we serve across Australia.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center text-base-content mb-4">Our Team</h2>
      <p class="text-center text-base-content/70 mb-12 max-w-2xl mx-auto">
        Our dedicated team of professionals is committed to providing exceptional care and support to every client we serve.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
        <div class="card bg-base-100 shadow-md">
          <div class="card-body items-center text-center">
            <div class="avatar placeholder mb-4">
              <div class="bg-primary text-primary-content rounded-full w-24">
                <span class="text-3xl">JD</span>
              </div>
            </div>
            <h3 class="card-title">Jane Doe</h3>
            <p class="text-primary font-medium">Founder & Director</p>
            <p class="text-base-content/60 text-sm">20+ years in healthcare management</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md">
          <div class="card-body items-center text-center">
            <div class="avatar placeholder mb-4">
              <div class="bg-secondary text-secondary-content rounded-full w-24">
                <span class="text-3xl">JS</span>
              </div>
            </div>
            <h3 class="card-title">John Smith</h3>
            <p class="text-primary font-medium">Clinical Lead</p>
            <p class="text-base-content/60 text-sm">Registered Nurse with 15+ years experience</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md">
          <div class="card-body items-center text-center">
            <div class="avatar placeholder mb-4">
              <div class="bg-accent text-accent-content rounded-full w-24">
                <span class="text-3xl">AJ</span>
              </div>
            </div>
            <h3 class="card-title">Alice Johnson</h3>
            <p class="text-primary font-medium">Care Coordinator</p>
            <p class="text-base-content/60 text-sm">Specialist in NDIS support coordination</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 px-4 bg-primary text-primary-content">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-primary-content/80 mb-8">
        Contact us today to discuss how we can support you or your loved ones with compassionate, professional home care services.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-outline border-primary-content text-primary-content hover:bg-primary-content hover:text-primary btn-lg">
          Contact Us
        </a>
        <a href="tel:+61863869999" class="btn bg-primary-content text-primary hover:bg-primary-content/90 btn-lg gap-2">
          <Icon name="hugeicons:call-02" class="h-5 w-5" />
          08 6386 9999
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
