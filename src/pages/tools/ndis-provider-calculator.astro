<script is:inline>
(function() {
  const APPLICATION_FEE = 282;

  function calculate() {
    const auditType = document.querySelector('input[name="audit-type"]:checked')?.value || 'verification';
    const numGroups = parseInt(document.getElementById('num-groups').value) || 2;
    const locations = parseInt(document.getElementById('locations').value) || 1;
    const employees = document.getElementById('employees').value || 'solo';

    // Check for high-risk services
    const hasBehaviourSupport = document.getElementById('behaviour-support').checked;
    const hasSIL = document.getElementById('sil').checked;
    const hasSDA = document.getElementById('sda').checked;
    const hasEarlyChildhood = document.getElementById('early-childhood').checked;
    const hasHighRisk = hasBehaviourSupport || hasSIL || hasSDA || hasEarlyChildhood;

    // Force certification if high-risk
    const actualAuditType = hasHighRisk ? 'certification' : auditType;

    // Calculate audit cost
    let auditCost;
    if (actualAuditType === 'verification') {
      auditCost = 3000 + (numGroups - 1) * 500;
      auditCost = Math.min(auditCost, 6000);
    } else {
      auditCost = 8000 + (numGroups - 1) * 1500 + (locations - 1) * 2000;
      if (hasSIL) auditCost += 3000;
      if (hasSDA) auditCost += 4000;
      if (hasBehaviourSupport) auditCost += 2000;
      auditCost = Math.min(auditCost, 35000);
    }

    // Calculate insurance
    let plCost, piCost, wcCost = 0;
    switch (employees) {
      case 'solo':
        plCost = 1200;
        piCost = 800;
        break;
      case 'small':
        plCost = 1800;
        piCost = 1200;
        wcCost = 2000;
        break;
      case 'medium':
        plCost = 2500;
        piCost = 1800;
        wcCost = 8000;
        break;
      case 'large':
        plCost = 4000;
        piCost = 2500;
        wcCost = 20000;
        break;
    }

    // Totals
    const setupTotal = APPLICATION_FEE + auditCost;
    const annualTotal = plCost + piCost + wcCost;
    const year1 = setupTotal + annualTotal;
    const year2 = annualTotal;
    const year3 = annualTotal + (actualAuditType === 'certification' ? auditCost * 0.6 : 0); // Mid-term audit
    const threeYear = year1 + year2 + year3;

    // Update display
    document.getElementById('audit-type-display').textContent = actualAuditType === 'verification' ? 'Verification' : 'Certification';
    document.getElementById('audit-cost').textContent = '$' + auditCost.toLocaleString();
    document.getElementById('setup-total').textContent = '$' + setupTotal.toLocaleString();
    document.getElementById('upfront-cost').textContent = '$' + setupTotal.toLocaleString();

    document.getElementById('pl-cost').textContent = '$' + plCost.toLocaleString();
    document.getElementById('pi-cost').textContent = '$' + piCost.toLocaleString();
    document.getElementById('wc-cost').textContent = '$' + wcCost.toLocaleString();
    document.getElementById('annual-total').textContent = '$' + annualTotal.toLocaleString();
    document.getElementById('annual-cost').textContent = '$' + annualTotal.toLocaleString();

    document.getElementById('year1').textContent = '$' + year1.toLocaleString();
    document.getElementById('year2').textContent = '$' + year2.toLocaleString();
    document.getElementById('year3').textContent = '$' + Math.round(year3).toLocaleString();
    document.getElementById('three-year').textContent = '$' + Math.round(threeYear).toLocaleString();

    // Update audit type radio if forced
    if (hasHighRisk) {
      document.querySelector('input[name="audit-type"][value="certification"]').checked = true;
    }
  }

  // Event listeners
  document.querySelectorAll('input[name="audit-type"]').forEach(el => {
    el.addEventListener('change', calculate);
  });
  document.getElementById('num-groups').addEventListener('input', calculate);
  document.getElementById('locations').addEventListener('change', calculate);
  document.getElementById('employees').addEventListener('change', calculate);
  document.getElementById('behaviour-support').addEventListener('change', calculate);
  document.getElementById('sil').addEventListener('change', calculate);
  document.getElementById('sda').addEventListener('change', calculate);
  document.getElementById('early-childhood').addEventListener('change', calculate);

  // Initial calculation
  calculate();
})();
</script>
