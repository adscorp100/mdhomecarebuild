---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all services
const allServices = await getCollection('services');

// Sort services alphabetically by title
const sortedServices = allServices.sort(
  (a, b) => a.data.title.localeCompare(b.data.title)
);

// Group services by category
const servicesByCategory: Record<string, typeof allServices> = sortedServices.reduce((acc, service) => {
  const category = service.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(service);
  return acc;
}, {} as Record<string, typeof allServices>);

// Sort categories alphabetically
const sortedCategories = Object.keys(servicesByCategory).sort();

// Collect all keywords from services for meta tags
const allKeywords = allServices.flatMap(service => service.data.keywords || []);
const uniqueKeywords = [...new Set(allKeywords)];
const metaKeywords = uniqueKeywords.join(', ');
---

<BaseLayout title="Our Services | MD Home Care">
  <head slot="head">
    <meta name="keywords" content={metaKeywords} />
  </head>

  <div class="max-w-7xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-base-content mb-4">Our Services</h1>
      <p class="text-lg text-base-content/70 max-w-2xl mx-auto mb-8">
        Explore our comprehensive range of care and support services designed to meet your individual needs.
      </p>

      <!-- CTA Alert -->
      <div class="alert bg-base-200 max-w-xl mx-auto">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-primary shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Need Help Choosing a Service?</span>
        <a href="/contact" class="btn btn-primary btn-sm">Talk to Our Team</a>
      </div>
    </div>

    <!-- Services Layout -->
    <div class="lg:grid lg:grid-cols-[220px_1fr] lg:gap-12">
      <!-- Category Navigation (Sidebar) -->
      <aside class="mb-8 lg:mb-0">
        <div class="lg:sticky lg:top-20">
          <h2 class="text-lg font-semibold text-base-content mb-4">Categories</h2>
          <ul class="menu bg-base-200 rounded-lg p-2">
            {sortedCategories.map((category) => (
              <li>
                <a
                  href={"#category-" + category.toLowerCase().replace(/\s+/g, '-')}
                  class="category-link flex justify-between"
                >
                  <span>{category}</span>
                  <span class="badge badge-ghost badge-sm">{servicesByCategory[category].length}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </aside>

      <!-- Service Categories -->
      <div class="space-y-16">
        {sortedCategories.map((category, index) => (
          <section
            id={"category-" + category.toLowerCase().replace(/\s+/g, '-')}
            class="scroll-mt-24"
          >
            <!-- Category Header -->
            <div class="border-b border-base-300 pb-4 mb-6">
              <h2 class="text-2xl font-bold text-base-content">{category}</h2>
              <p class="text-sm text-base-content/60 mt-1">
                {servicesByCategory[category].length} services available
              </p>
            </div>

            <!-- Services Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
              {servicesByCategory[category].map((service) => (
                <article class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-base-200">
                  <a href={"/services/" + service.slug} class="block group">
                    {service.data.image && (
                      <figure class="h-44 overflow-hidden">
                        <img
                          src={service.data.image}
                          alt={service.data.title.replace('{suburb}', 'Australia')}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </figure>
                    )}
                    <div class="card-body p-5">
                      <h3 class="card-title text-base group-hover:text-primary transition-colors">
                        {service.data.title.replace('{suburb}', 'Australia')}
                      </h3>
                      <p class="text-sm text-base-content/70 line-clamp-3">
                        {service.data.description.replace(/\{suburb\}/g, 'Australia')}
                      </p>
                      <div class="card-actions justify-end mt-3">
                        <span class="link link-primary text-sm font-medium inline-flex items-center gap-1">
                          View details
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                        </span>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>

            <!-- Category Navigation -->
            <div class="flex flex-wrap justify-between gap-4 mt-8">
              {index < sortedCategories.length - 1 && (
                <a
                  href={"#category-" + sortedCategories[index + 1].toLowerCase().replace(/\s+/g, '-')}
                  class="btn btn-ghost btn-sm gap-2"
                >
                  Next: {sortedCategories[index + 1]}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              )}
              <a href="#" class="btn btn-ghost btn-sm gap-2 ml-auto">
                Back to top
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                </svg>
              </a>
            </div>
          </section>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryLinks = document.querySelectorAll('.category-link');
    const categorySections = document.querySelectorAll('section[id^="category-"]');

    const highlightActiveCategory = () => {
      let currentSectionId = '';

      categorySections.forEach(section => {
        const sectionTop = section.getBoundingClientRect().top + window.scrollY;
        const sectionHeight = section.getBoundingClientRect().height;

        if (window.scrollY >= sectionTop - 200 && window.scrollY < sectionTop + sectionHeight - 200) {
          const id = section.getAttribute('id');
          if (id) {
            currentSectionId = id;
          }
        }
      });

      categoryLinks.forEach(link => {
        link.classList.remove('active', 'bg-primary', 'text-primary-content');
      });

      if (currentSectionId) {
        const activeLink = document.querySelector(`.category-link[href="#${currentSectionId}"]`);
        if (activeLink) {
          activeLink.classList.add('active', 'bg-primary', 'text-primary-content');
        }
      }
    };

    window.addEventListener('scroll', highlightActiveCategory);
    highlightActiveCategory();
  });
</script>
