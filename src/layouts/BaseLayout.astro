                    <div class="grid grid-cols-4 gap-0">
                      <!-- Personal Support -->
                      <div class="p-5 border-r border-base-200">
                        <h4 class="font-semibold text-primary mb-3 text-sm">Personal Support</h4>
                        <div class="flex flex-col gap-0.5">
