---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface PageProps {
  data: CollectionEntry<'blog'>[];
  currentPage: number;
  lastPage: number;
  url: {
    current: string;
    prev?: string;
    next?: string;
  };
}

interface Props {
  page: PageProps;
}

const { page } = Astro.props as Props;
const { data: posts, currentPage, lastPage } = page;
---

<BaseLayout title={`Blog ${currentPage > 1 ? `Page ${currentPage}` : ''} | MD Homecare`}>
  <div class="max-w-5xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-base-content mb-4">Blog</h1>
      <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
        Stay informed with the latest homecare insights, NDIS updates, and practical advice for clients and caregivers.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="card card-compact bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
          {post.data.image && (
            <figure>
              <img
                src={post.data.image}
                alt={post.data.title}
                class="h-48 w-full object-cover"
              />
            </figure>
          )}
          <div class="card-body">
            <p class="text-sm text-base-content/60">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })} · {post.data.author}
            </p>
            <h2 class="card-title">{post.data.title}</h2>
            <p class="text-base-content/70 line-clamp-2">{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>

    <!-- Pagination -->
    {lastPage > 1 && (
      <div class="flex justify-center items-center gap-4 mt-12">
        <a
          href={currentPage === 2 ? '/blog' : `/blog/${currentPage - 1}`}
          class={`btn btn-ghost btn-sm ${currentPage === 1 ? 'btn-disabled' : ''}`}
        >
          «
        </a>
        <span class="text-sm text-base-content/70">
          Page {currentPage} of {lastPage}
        </span>
        <a
          href={`/blog/${currentPage + 1}`}
          class={`btn btn-ghost btn-sm ${currentPage === lastPage ? 'btn-disabled' : ''}`}
        >
          »
        </a>
      </div>
    )}
  </div>
</BaseLayout>
