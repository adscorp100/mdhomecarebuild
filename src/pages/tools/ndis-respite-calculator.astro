---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

// Tool metadata for automatic discovery by tools/index.astro
export const toolMeta = {
  title: "NDIS Respite Calculator",
  description: "Calculate Short Term Accommodation (STA) costs for NDIS respite care. Get pricing for weekdays, weekends, and holidays.",
  icon: "hugeicons:bed-single-01",
  color: "accent",
  phase: 1
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "NDIS Respite Cost Calculator 2025",
  "description": "Free NDIS respite calculator. Calculate short term accommodation (STA) costs per day/week. 2025-26 rates for standard, high support, and SDA respite.",
  "url": "https://mdhomecare.com.au/tools/ndis-respite-calculator",
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "AUD"
  }
};

const faqData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does NDIS respite care cost per day?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "NDIS respite care (Short Term Accommodation or STA) costs $346.51 per day for standard weekday rates in 2025-26. Weekend rates are higher: $384.92 on Saturdays and $423.32 on Sundays. These rates include accommodation and basic personal care. Additional support like high intensity care is charged separately."
      }
    },
    {
      "@type": "Question",
      "name": "What are the NDIS STA rates 2025?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "NDIS STA rates for 2025-26 are: Standard weekday $346.51/day, Saturday $384.92/day, Sunday $423.32/day, and Public Holiday $461.72/day. High Physical Support STA rates are higher. These rates cover accommodation and personal care in a 24-hour facility."
      }
    },
    {
      "@type": "Question",
      "name": "How much does respite care cost per week NDIS?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "NDIS respite care costs approximately $2,500-$2,800 per week for standard STA, depending on the mix of weekday and weekend days. A typical 7-night stay with 5 weekdays and 2 weekend days costs around $2,540. High physical support or SDA accommodation costs more."
      }
    },
    {
      "@type": "Question",
      "name": "What is the difference between NDIS respite care and STA?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Respite care and STA (Short Term Accommodation) refer to the same NDIS support. STA is the official NDIS term for respite - temporary accommodation away from your usual home that provides overnight support. STA is funded under Core Supports in NDIS plans and can be used for carer respite or participant skill-building."
      }
    },
    {
      "@type": "Question",
      "name": "What NDIS line item codes are used for respite/STA?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The main NDIS line item codes for STA/respite are: 01_799_0104_1_1 (Standard weekday), 01_799_0104_1_1_S (Saturday), 01_799_0104_1_1_U (Sunday), and 01_799_0104_1_1_P (Public Holiday). High Physical Support uses codes starting with 01_800. These codes include both accommodation and personal care."
      }
    }
  ]
};
---

<BaseLayout
  title="NDIS Respite Cost Calculator 2025 - STA Rates & Pricing"
  description="Free NDIS respite calculator. Calculate short term accommodation (STA) costs per day/week. 2025-26 rates for standard, high support, and SDA respite."
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqData)} />

  <div class="relative overflow-hidden bg-base-100">
    <div class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4 w-[800px] h-[800px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4 w-[600px] h-[600px] bg-secondary/5 rounded-full blur-3xl pointer-events-none"></div>

    <div class="container-custom relative z-10 py-20 lg:py-32">

      <nav class="mb-8 mt-8 lg:mt-0">
        <ol class="flex items-center gap-2 text-sm text-secondary/60">
