            <p class="text-sm text-secondary/60">Calculate support worker hourly rates.</p>
          </a>
          <a href="/blog/plan-manager-vs-agency-managed/" class="group bg-white rounded-2xl p-6 border border-base-200 hover:shadow-lg hover:-translate-y-1 transition-all">
            <h3 class="font-bold text-secondary mb-2 group-hover:text-primary transition-colors">Plan Management Options</h3>
            <p class="text-sm text-secondary/60">Self, plan, or agency managed?</p>
          </a>
        </div>
      </div>

    </div>
  </div>
</BaseLayout>

<script is:inline>
(function() {
  const WEEKDAY_RATE = 70.88;
  const WEEKEND_RATE = 99.24;

  function calculate() {
    const coreBudget = parseFloat(document.getElementById('core-budget').value) || 0;
    const cbBudget = parseFloat(document.getElementById('cb-budget').value) || 0;
    const capitalBudget = parseFloat(document.getElementById('capital-budget').value) || 0;
    const planDuration = parseInt(document.getElementById('plan-duration').value) || 12;

    const totalPlan = coreBudget + cbBudget + capitalBudget;
    const weeks = (planDuration / 12) * 52;
    const weeklyBudget = totalPlan / weeks;

    // Percentages
    const corePct = totalPlan > 0 ? (coreBudget / totalPlan * 100).toFixed(0) : 0;
    const cbPct = totalPlan > 0 ? (cbBudget / totalPlan * 100).toFixed(0) : 0;
    const capitalPct = totalPlan > 0 ? (capitalBudget / totalPlan * 100).toFixed(0) : 0;

    // Weekly amounts
    const coreWeekly = coreBudget / weeks;
    const cbWeekly = cbBudget / weeks;
    const capitalWeekly = capitalBudget / weeks;

    // Support hours (from Core)
    const hoursWeekday = coreWeekly / WEEKDAY_RATE;
    const hoursWeekend = coreWeekly / WEEKEND_RATE;
    const hoursAnnual = coreBudget / WEEKDAY_RATE;

    // Update display
    document.getElementById('total-plan').textContent = '$' + totalPlan.toLocaleString();
    document.getElementById('weekly-budget').textContent = '$' + Math.round(weeklyBudget).toLocaleString();

    document.getElementById('core-bar').style.width = corePct + '%';
    document.getElementById('cb-bar').style.width = cbPct + '%';
    document.getElementById('capital-bar').style.width = capitalPct + '%';

    document.getElementById('core-pct').textContent = corePct + '%';
    document.getElementById('cb-pct').textContent = cbPct + '%';
    document.getElementById('capital-pct').textContent = capitalPct + '%';

    document.getElementById('core-weekly').textContent = '$' + Math.round(coreWeekly) + '/week';
    document.getElementById('cb-weekly').textContent = '$' + Math.round(cbWeekly) + '/week';
    document.getElementById('capital-weekly').textContent = '$' + Math.round(capitalWeekly) + '/week';

    document.getElementById('hours-weekday').textContent = hoursWeekday.toFixed(1);
    document.getElementById('hours-weekend').textContent = hoursWeekend.toFixed(1);
    document.getElementById('hours-annual').textContent = Math.round(hoursAnnual);
  }

  // Event listeners
  document.getElementById('core-budget').addEventListener('input', calculate);
  document.getElementById('cb-budget').addEventListener('input', calculate);
  document.getElementById('capital-budget').addEventListener('input', calculate);
  document.getElementById('plan-duration').addEventListener('change', calculate);

  // Initial calculation
  calculate();
})();
</script>
