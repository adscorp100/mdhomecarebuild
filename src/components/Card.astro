---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  body: string;
  href?: string;
  imgSrc?: string;
}

const { href, title, body, imgSrc } = Astro.props;
---

<div class="card bg-base-100 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
  {imgSrc && (
    <figure>
      <img src={imgSrc} alt={title} class="w-full h-48 object-cover" />
    </figure>
  )}
  <div class="card-body">
    <h3 class="card-title text-lg">
      {href ? (
        <a href={href} class="hover:text-primary transition-colors">{title}</a>
      ) : (
        title
      )}
    </h3>
    <p class="text-base-content/70 leading-relaxed">{body}</p>
    {href && (
      <div class="card-actions justify-end mt-4">
        <a href={href} class="link link-primary font-semibold inline-flex items-center gap-1 group">
          Learn more
          <Icon name="hugeicons:arrow-right-01" class="h-4 w-4 transition-transform group-hover:translate-x-1" />
        </a>
      </div>
    )}
  </div>
</div>
